{
    "compilerOptions": {
        "baseUrl": "../",
        "noImplicitAny": false,
        "noEmitOnError": false,
        "removeComments": false,
        "sourceMap": true,
        "inlineSources": true,
        // "out": "output/jsstore.js",
        "target": "es5",
        "preserveConstEnums": true,
        "declaration": true,
        "module": "ESNext",
        "outDir": "../build/ts",
        "lib": [
            "es2015",
            "dom",
            "webworker",
            "ES5",
            "ES6"
        ],
        "moduleResolution": "node",
        "paths": {
            "@/*": ["./src/*"],
            "@worker/*": ["./src/worker/*"]
        }
    },
    "exclude": [
        "node_namespaces",
        "output"
    ]
}